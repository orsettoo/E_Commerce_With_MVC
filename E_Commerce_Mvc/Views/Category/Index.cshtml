@using E_Commerce_Shared.Entity;

@model List<Category>
@if(Model != null)
{
  <div class="container">
        <div class="col mb-3" >
            <div class="text-end">
                <form method="get" asp-action="CreateCategory" asp-controller="Category">
                    <button type="submit" class="btn btn-warning">Add Category</button>
                </form>
            </div>
            

        </div>
  
    
  


    @foreach (var item in Model)
    {
        <div class="accordion accordion-flush" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        @item.CategoryName
                    </button>
                </h2>

                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="row mt-3 mb-3">
                        <div class="col">
                            <form method="post" asp-action="DeleteCategory" asp-controller="Category" asp-route-categoryId="@item.Id">
                                    <button class="btn btn-primary" type="submit">Kategori Sil</button>

                            </form>
                          
                        </div>
                        <div class="col">
                            <form method="get" asp-action="UpdateCategory" asp-controller="Category" asp-route-categoryId="@item.Id">
                                    <button class="btn btn-primary" type="submit">Kategori Düzenle</button>
                            </form>
                           
                        </div>
                    </div>

                </div>

            </div>

        </div>
    }
    </div>
}
else {
    
    <div class="row">
        <div class="row">
            <p>Category not found product</p>
        </div>
        <div class="col">
            <form method="get" asp-action="CreateCategory" asp-controller="Category">
                <button type="submit" class="btn btn-warning">Add Category</button>
            </form>
        </div>
    </div>
    
   
}